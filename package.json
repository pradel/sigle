{
  "name": "sigle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "build": "next build",
    "test": "yarn test:lint && yarn test:only",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "prettier": "prettier --write '**/*.{js,ts,tsx,md,css}'",
    "test:only": "jest",
    "test:lint": "eslint 'src/**/*.{js,ts,tsx}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "resolutions": {
    "@types/slate": "0.47.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@reach/dialog": "0.8.5",
    "@reach/menu-button": "0.8.5",
    "@sentry/browser": "5.13.0",
    "@sentry/node": "5.13.1",
    "@tippy.js/react": "3.1.1",
    "blockstack": "19.3.0",
    "date-fns": "2.10.0",
    "fathom-client": "2.0.2",
    "formik": "2.1.4",
    "history": "4.10.1",
    "immutable": "4.0.0-rc.12",
    "nanoid": "2.1.11",
    "next": "9.3.0",
    "next-seo": "4.4.0",
    "nprogress": "0.2.0",
    "react": "16.13.0",
    "react-color": "2.18.0",
    "react-div-100vh": "0.3.8",
    "react-dom": "16.13.0",
    "react-dropzone": "10.2.1",
    "react-icons": "3.9.0",
    "react-spring": "8.0.27",
    "react-toastify": "5.5.0",
    "slate": "0.47.9",
    "slate-html-serializer": "0.8.11",
    "slate-plain-serializer": "0.7.11",
    "slate-react": "0.22.10",
    "slate-soft-break": "0.9.0",
    "styled-components": "5.0.1",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@bundle-analyzer/webpack-plugin": "0.5.1",
    "@types/jest": "25.1.3",
    "@types/nanoid": "2.1.0",
    "@types/node": "13.7.6",
    "@types/nprogress": "0.2.0",
    "@types/react": "16.9.23",
    "@types/react-color": "3.0.1",
    "@types/react-div-100vh": "0.3.0",
    "@types/react-dom": "16.9.5",
    "@types/slate": "0.47.4",
    "@types/slate-html-serializer": "0.6.3",
    "@types/slate-plain-serializer": "0.6.1",
    "@types/slate-react": "0.22.8",
    "@types/styled-components": "5.0.1",
    "@typescript-eslint/eslint-plugin": "2.21.0",
    "@typescript-eslint/parser": "2.21.0",
    "@zeit/next-bundle-analyzer": "0.1.2",
    "babel-plugin-macros": "2.8.0",
    "babel-plugin-styled-components": "1.10.7",
    "dotenv": "8.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lint-staged": "10.0.8",
    "next-compose-plugins": "2.2.0",
    "prettier": "1.19.1",
