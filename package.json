{
  "private": true,
  "scripts": {
    "prettier": "prettier --write '**/*.{js,ts,tsx,md,css}'"
  },
  "workspaces": [
    "sigle"
  ],
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1"
  }
}
